//<!DOCTYPE html>
//<html lang="en">
//<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Gallery</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }
        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 16px;
            padding: 16px;
            width: 80%;
        }
        .gallery-item {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .gallery-item img {
            width: 100%;
            height: auto;
            display: block;
        }
        .gallery-item .caption {
            padding: 8px;
            text-align: center;
            background-color: #333;
            color: #fff;
        }
    </style>
</head>
<body>

    <div class="gallery" id="gallery">
        <!-- Gallery items will be dynamically inserted here -->
    </div>

    <script>
        // Array of image names (without file extension)
        const imageNames = [
            'IMG_6493',
            'IMG_6494',
            'IMG_6495',
            // Add more image names as needed
        ];

        const gallery = document.getElementById('gallery');

        imageNames.forEach(imageName => {
            const imageURL = `https://raw.githubusercontent.com/digiprosmk/digiprosmk.github.io/main/images/${imageName}.jpg`;
            const captionURL = `https://raw.githubusercontent.com/digiprosmk/digiprosmk.github.io/main/images/${imageName}.txt`;

            // Create gallery item element
            const galleryItem = document.createElement('div');
            galleryItem.classList.add('gallery-item');

            // Create image element
            const img = document.createElement('img');
            img.src = imageURL;
            img.alt = imageName;

            // Fetch caption from the text file
            fetch(captionURL)
                .then(response => response.text())
                .then(captionText => {
                    // Create caption element
                    const caption = document.createElement('div');
                    caption.classList.add('caption');
                    caption.textContent = captionText;
                    galleryItem.appendChild(caption);
                })
                .catch(error => {
                    // Handle errors (if text file is not found)
                    console.error('Error fetching caption:', error);
                });

            // Append image to the gallery item
            galleryItem.appendChild(img);

            // Add the gallery item to the gallery
            gallery.appendChild(galleryItem);
        });
    </script>

</body>
</html>

